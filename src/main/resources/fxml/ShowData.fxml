<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="468.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="tableViewForCustomer" layoutY="48.0" prefHeight="420.0" prefWidth="500.0">
        <columns>
          <TableColumn fx:id="idCall" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" resizable="false" text="ID" />
            <TableColumn fx:id="firstNameCall" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="FIRST NAME" />
            <TableColumn fx:id="lastNameCall" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="LAST NAME" />
            <TableColumn fx:id="phoneNumberCall" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="PHONE" />
            <TableColumn fx:id="locationCall" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="LOCATION" />
        </columns>
      </TableView>
      <TextField fx:id="textFieldForSearch" layoutX="123.0" layoutY="14.0" />
      <Button fx:id="btnSearch" layoutX="-8.0" layoutY="14.0" mnemonicParsing="false" onAction="#searchForCustomerByID" prefHeight="24.0" prefWidth="123.0" text="SEARCH " />
      <Button fx:id="btnRefresh" layoutX="363.0" layoutY="14.0" mnemonicParsing="false" onAction="#refreshData" prefHeight="24.0" prefWidth="123.0" text="REFRECH" />
   </children>
</AnchorPane>
